---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'posts'>['data'];

const { title, description, date, tags, author } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | AI & Automation Blog</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-4xl mx-auto px-4 py-4">
        <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700">
          AI & Automation Blog
        </a>
      </div>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-12">
      <article class="bg-white rounded-lg shadow-lg p-8">
        <header class="mb-8 border-b pb-6">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
          
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-4">
            <time datetime={date.toISOString()} class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
            
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {author}
            </span>
          </div>

          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
                #{tag}
              </span>
            ))}
          </div>
        </header>

        <div class="prose prose-lg max-w-none">
          <slot />
        </div>

        <footer class="mt-12 pt-8 border-t">
          <a 
            href="/" 
            class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to all posts
          </a>
        </footer>
      </article>
    </main>

    <footer class="bg-white border-t mt-20">
      <div class="max-w-4xl mx-auto px-4 py-8 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} AI & Automation Blog. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .prose {
    @apply text-gray-800;
  }
  
  .prose h2 {
    @apply text-3xl font-bold mt-12 mb-4 text-gray-900;
  }
  
  .prose h3 {
    @apply text-2xl font-bold mt-8 mb-3 text-gray-900;
  }
  
  .prose p {
    @apply mb-6 leading-relaxed;
  }
  
  .prose ul, .prose ol {
    @apply mb-6 ml-6;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose strong {
    @apply font-semibold text-gray-900;
  }
  
  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono text-pink-600;
  }
  
  .prose pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto mb-6;
  }
  
  .prose blockquote {
    @apply border-l-4 border-blue-500 pl-4 italic text-gray-700 my-6;
  }
</style>